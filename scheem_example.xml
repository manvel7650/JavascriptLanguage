<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="template.xsl"?>
<page title="PL101 Javascript Language">
	<js src="./scheem/parser.js" />
	<js src="./scheem/scheem.js" />
	<block title="Scheem Examples">
		<collapsible title="Factorial" id="factorial">
			<editor id="factorial_code" mode="scheme">
				<value><![CDATA[(begin\n\t(define factorial\n\t\t(lambda (n)\n\t\t\t(if (= n 0) 1 (* n (factorial (- n 1))))\n\t\t)\n\t)\n\t(factorial 5)\n)]]></value>
				<buttons><button onclick="executeScheem('factorial_code'); return false;">Run</button></buttons>
			</editor>
		</collapsible>
		<collapsible title="Fibonacci" id="fibonacci">
			<editor id="fibonacci_code" mode="scheme">
				<value><![CDATA[(begin\n\t(define fibonacci\n\t\t(lambda (n)\n\t\t\t(if (< n 2) n (+ (fibonacci (- n 1)) (fibonacci (- n 2))))\n\t\t)\n\t)\n\t(fibonacci 15)\n)]]></value>
				<buttons><button onclick="executeScheem('fibonacci_code'); return false;">Run</button></buttons>
			</editor>
		</collapsible>
		<collapsible title="Reverse list" id="reverse">
			<editor id="reverse_code" mode="scheme">
				<value><![CDATA[(begin\n\t(define reverse\n\t\t(lambda (n)\n\t\t\t(if (= (length n) 1) n (append (reverse (cdr n)) (car n)))\n\t\t)\n\t) \n\t(reverse (list 1 2 3 4))\n)]]></value>
				<buttons><button onclick="executeScheem('reverse_code'); return false;">Run</button></buttons>
			</editor>
		</collapsible>
		<collapsible title="Find in list" id="find">
			<editor id="find_code" mode="scheme">
				<value><![CDATA[(begin\n\t(define find\n\t\t(lambda (l n)\n\t\t\t(if (= (length l) 0) #f (if (= (car l) n) #t (find (cdr l) n)))\n\t\t)\n\t)\n\t(find (list 4 3 56 7) 7)\n)]]></value>
				<buttons><button onclick="executeScheem('find_code'); return false;">Run</button></buttons>
			</editor>
		</collapsible>
		<collapsible title="Apply function to list" id="function">
			<editor id="function_code" mode="scheme">
				<value><![CDATA[(begin\n\t(define c 0)\n\t(define sum\n\t\t(lambda (n) (set! c (+ c n)))\n\t)\n\t(define exec\n\t\t(lambda (l f) (begin (f (car l)) (if (> (length l) 1) (exec (cdr l) f) c)))\n\t)\n\t(exec (list 1 2 3) sum)\n)]]></value>
				<buttons><button onclick="executeScheem('function_code'); return false;">Run</button></buttons>
			</editor>
		</collapsible>
	</block>
</page>